<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iconGroup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_reaction"
    android:padding="4dp"
    android:layout_marginStart="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/icon_heart"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_heart_empty" />

    <ImageView
        android:id="@+id/icon_funny"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_funny_empty" />

    <ImageView
        android:id="@+id/icon_thumb"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_thumb_empty" />

    <ImageView
        android:id="@+id/icon_sad"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_sad_empty" />
</LinearLayout>
